{% extends '::layout/layoutAdmin.html.twig' %}

{% block body %}
    <h1>Users List Bills</h1>

    <table class="table table-striped table-hover">
        <thead>
        <tr>
            <th>References</th>
            <th>Date</th>
            <th>Price Tax Excl</th>
            <th></th>
        </tr>
        </thead>
        <tbody>
        {% if utilisateur.commandes|length == 0 %}
            <tr>
                <td colspan="4"><center>No bills currently.</center></td>
            </tr>
        {% endif %}
        {% for facture in utilisateur.commandes %}
            <tr>
                <td>Ref : {{ facture.reference }}</td>
                <td>{{ facture.date|date('d/m/Y') }}</td>
                <td>{{ facture.commande.prixTTC }} R</td>
                <td><a href="{{ path('adminShowFacture', { 'id' : facture.id }) }}" target="_blank"><i class="icon-refresh"></i></a></td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}