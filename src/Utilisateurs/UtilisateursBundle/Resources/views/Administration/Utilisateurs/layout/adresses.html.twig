{% extends '::layout/layoutAdmin.html.twig' %}

{% block body -%}
    <h1>User Address</h1>

    {% for adresse in utilisateur.adresses %}
        <div class="span12">
            <div class="span4">
                <h4>Address {{ loop.index }} :</h4>
                {{ adresse.adresse }}, {{ adresse.cp }} {{ adresse.ville }} - {{ adresse.pays }}
                <br>{{ adresse.prenom }} {{ adresse.nom }}
                <br /><br />
            </div>
        </div>
    {% endfor %}
{% endblock %}